        function drawroomData(roomName,roomDescrible,roomImg) {

            tmpHtml = "";

            roomName.forEach((roomName,idx)=> {
                tmpHtml += "<li>";
                roomImg[idx].forEach((Img)=>{
                    tmpHtml += "<div class='picture'><img src=" + Img + "></div>";
                })
                tmpHtml += "<div class='describle'>";
                tmpHtml += "<strong>" + roomName + "</strong>";
                tmpHtml += "<p>" + roomDescrible[idx] + "</p>";
                tmpHtml += "</div>";
                tmpHtml += "</li>";
            })

            $('.roomintro1').children('.roomData').html(tmpHtml)
        }


        function roomDatabase() {


            
            const roomName = [
            '비허밍 스터디카페 출입 및 카페존',
